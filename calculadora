       double num2 = Double.parseDouble(txtn2.getText());
       
       
       operacion operar = new operacion();
       int resultado = operar.calculo(num1,num2);
       
       JOptionPane.showMessageDialog(null, "El Ã¡rea es: " + resultado);
     
